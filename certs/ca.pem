<?php
$DB_HOST = getenv("DB_HOST");
$DB_USER = getenv("DB_USER");
$DB_PASS = getenv("DB_PASS");
$DB_NAME = getenv("DB_NAME");
$DB_PORT = getenv("DB_PORT");

// Path Sertifikat SSL dari Aiven
$CA_CERT = __DIR__ . "/ca.pem";

// Koneksi MySQL + SSL
$mysqli = mysqli_init();
mysqli_ssl_set($mysqli, NULL, NULL, $CA_CERT, NULL, NULL);

if (!mysqli_real_connect(
    $mysqli,
    $DB_HOST,
    $DB_USER,
    $DB_PASS,
    $DB_NAME,
    $DB_PORT,
    NULL,
    MYSQLI_CLIENT_SSL
)) {
    die("Koneksi SSL gagal: " . mysqli_connect_error());
}
?>
